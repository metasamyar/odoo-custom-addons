<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.web.push</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Web Push Notifications" name="web_push_notify">
                    <block title="VAPID Configuration" name="vapid_config_setting_container">
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="web_push_vapid_public_key"/>
                                    <div class="text-muted">
                                        Your VAPID Public Key (from 'vapid --applicationServerKey' or Firebase)
                                    </div>
                                    <field name="web_push_vapid_public_key"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="web_push_vapid_private_key"/>
                                    <div class="text-muted">
                                        Your VAPID Private Key (Keep this secret!)
                                    </div>
                                    <field name="web_push_vapid_private_key" password="True"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="web_push_vapid_mailto"/>
                                    <div class="text-muted">
                                        Contact email (e.g. mailto:admin@example.com)
                                    </div>
                                    <field name="web_push_vapid_mailto"/>
                                </div>
                            </div>
                        </div>
                    </block>

                    <block title="Firebase Configuration (Optional)" name="firebase_config_setting_container">
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="web_push_firebase_api_key"/>
                                    <field name="web_push_firebase_api_key"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="web_push_firebase_project_id"/>
                                    <field name="web_push_firebase_project_id"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="web_push_firebase_messaging_sender_id"/>
                                    <field name="web_push_firebase_messaging_sender_id"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="web_push_firebase_app_id"/>
                                    <field name="web_push_firebase_app_id"/>
                                </div>
                            </div>
                        </div>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
